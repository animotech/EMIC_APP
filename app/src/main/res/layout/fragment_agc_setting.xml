<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="jp.co.dst.emic_app.AgcSettingFragment"
    android:orientation="vertical"
    android:id="@+id/L1">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:id="@+id/R1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nowCalText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nowTimeText"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:id="@+id/relativeLayout8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="説明文"
            android:id="@+id/agsExplainText"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="開始"
            android:id="@+id/agcNextButton"
            android:layout_marginStart="160dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="160dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中断"
            android:id="@+id/agcInterruptbutton"
            android:layout_marginLeft="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/agcNextButton"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/fagsLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/L2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="距離"
                    android:id="@+id/textView17"
                    android:gravity="center" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1mm"
                    android:id="@+id/textView24"
                    android:layout_marginTop="15dp"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"

                    android:background="@drawable/simple_frame"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0.8mm"
                    android:id="@+id/textView26"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0.6mm"
                    android:id="@+id/textView28"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0.4mm"
                    android:id="@+id/textView30"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0.2mm"
                    android:id="@+id/textView32"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2"
                android:layout_marginLeft="30dp"
                android:layout_gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PW2"
                    android:id="@+id/textView16"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw2Text1mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:layout_gravity="bottom"
                    android:gravity="center" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw2Text0_8mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center"
                    android:layout_gravity="bottom" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw2Text0_6mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:layout_gravity="bottom"
                    android:gravity="center" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw2Text0_4mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:layout_gravity="bottom"
                    android:gravity="center" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw2Text0_2mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout3"
                android:layout_below="@+id/agsExplainText"
                android:layout_alignLeft="@+id/agcSetRtbutton"
                android:layout_alignStart="@+id/agcSetRtbutton"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PW1"
                    android:id="@+id/textView18"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw1Text1mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:layout_gravity="bottom"
                    android:gravity="center" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw1Text0_8mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center"
                    android:layout_gravity="bottom" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw1Text0_6mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:layout_gravity="bottom"
                    android:gravity="center" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw1Text0_4mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:layout_gravity="bottom"
                    android:gravity="center" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/pw1Text0_2mm"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/simple_frame"
                    android:gravity="center" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="戻る"
            android:id="@+id/agcSetRtbutton"
            android:layout_below="@+id/L2"
            android:layout_alignRight="@+id/L2"
            android:layout_alignEnd="@+id/L2"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</LinearLayout>
