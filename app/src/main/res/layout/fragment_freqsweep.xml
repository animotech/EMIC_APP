<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/freqsweep">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戻る"
        android:id="@+id/returnButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周波数掃引開始"
        android:id="@+id/sweepStartButton"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/returnButton"
        android:layout_alignLeft="@+id/surfaceView2"
        android:layout_alignStart="@+id/surfaceView2"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <SurfaceView
        android:layout_width="495dp"
        android:layout_height="495dp"
        android:id="@+id/surfaceView2"
        android:layout_above="@+id/sweepStartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pw2 ―"
        android:id="@+id/textView6"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:textColor="#2dfc1b"
        android:layout_above="@+id/surfaceView2"
        android:layout_toLeftOf="@+id/returnButton"
        android:layout_toStartOf="@+id/returnButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pw1 ―"
        android:id="@+id/textView14"
        android:textColor="#ffa500"
        android:layout_alignTop="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6" />


</RelativeLayout>
